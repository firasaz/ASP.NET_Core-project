@model List<CategoryModel>

@{
    ViewData["Title"] = "Index";
}
<div class="container py-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary py-2">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br/>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead class="bg-light text-dark text-uppercase fw-bold">
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Date Created</th>
                <th></th>
                @*<th></th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model)
            {
                <tr>
                    <td width="40%">@row.Name</td>
                    <td width="">@row.DisplayOrder</td>
                    <td>@row.CreatedDateTime</td>
                    <td class="d-flex justify-content-between">
                        <div class="mx-2">
                            <a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@row.ID">
                                <i class="bi bi-pencil"></i>&nbsp; Edit
                            </a>
                        </div>
                        
                        <div>
                            <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@row.ID">
                                <i class="bi bi-trash"></i>&nbsp; Delete
                            </a>
                        </div>
                    </td>
                    @*<td width="10%">
                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@row.ID">
                            <i class="bi bi-trash"></i>&nbsp; Delete
                        </a>
                    </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>
